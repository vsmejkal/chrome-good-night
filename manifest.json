{
  "name": "Good Night",
  "version": "1.0",
  "description": "Turn everything black and white after 10pm.",
  "icons": {
    "16": "icons/crescent-moon-16.png",
    "128": "icons/crescent-moon-128.png",
    "512": "icons/crescent-moon-512.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "permissions": [
    "scripting", "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 3
}